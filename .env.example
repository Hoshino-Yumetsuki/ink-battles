OPENAI_API_KEY=
OPENAI_BASE_URL=
MODEL=

# 是否使用流式输出（true/false）
USE_STREAMING=

# 是否使用结构化输出（true/false）
USE_STRUCTURED_OUTPUT=

# MongoDB 配置
MONGODB_URI=mongodb://localhost:27017

# 速率限制配置
# 是否启用基于 fingerprint 的速率限制（true/false）
FINGERPRINT_RATE_LIMIT_ENABLED=false
# 速率限制时间窗口（秒，86400秒=1天）
RATE_LIMIT_WINDOW_SECONDS=86400
# 时间窗口内最大请求次数（每天10次）
RATE_LIMIT_MAX_REQUESTS=10

# 邮件服务器配置 (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=user@example.com
SMTP_PASS=password
SMTP_FROM="Ink Battles <noreply@inkbattles.com>"
# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Cloudflare Turnstile配置
# 设置为 false 可以禁用人机验证（开发环境可用）
TURNSTILE_ENABLED=true
NEXT_PUBLIC_TURNSTILE_ENABLED=true
NEXT_PUBLIC_TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA

USER_DAILY_LIMIT=20

# 登录/注册页面背景图URL
NEXT_PUBLIC_AUTH_BACKGROUND=/G13s14MbIAADlgb.jpg

# 仪表盘页面背景图URL
NEXT_PUBLIC_DASHBOARD_BACKGROUND=/G13s14MbIAADlgb.jpg